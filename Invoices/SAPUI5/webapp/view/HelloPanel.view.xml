<mvc:View controllerName="alfa02.SAPUI5.controller.HelloPanel"
          xmlns="sap.m" 
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:core="sap.ui.core"
          displayBlock="true" >
     <Panel headerText="{i18n>hellowPanel}">
        <content>
            <Button id="btn2" icon="sap-icon://action" text="{i18n>HelloDialogBut}" press=".onOpenDialog" class="sapUiSmallMarginEnd"/>
            <Button id="btn1" text="{i18n>showHelloButtonText}" press=".onShowHello" class="sapUiSmallMarginEnd"/>
            <Input id="ip1" value="{/recipient/name}"
                valueLiveUpdate="true"
                width="60%"/>
            <Text text="Hello {/recipient/name}" class="sapUiSmallMargin boldElements sapthemeHighlight-asColor"/>
        </content>
    </Panel>
    <core:Fragment fragmentName="alfa02.SAPUI5.view.Form01" type="XML" />
</mvc:View>